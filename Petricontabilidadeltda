    <script>
        function redirecionarWhatsApp() {
            const servicoSelecionado = document.getElementById("servico").value;
            const numero = "556635712424";
            const mensagem = encodeURIComponent("Olá, gostaria de mais informações sobre o serviço: " + servicoSelecionado);
            window.open("https://wa.me/" + numero + "?text=" + mensagem, "_blank");
        }
    </script>
